    "tasks": [
        {
            "type": "shell",
            "label": "build a project (debug)",
            "dependsOn": [
                "cmake (debug)",
                "make (debug)",
            ]
        },
        {
            "type": "shell",
            "label": "cmake (debug)",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake --config debug .",
        },
        {
            "type": "shell",
            "label": "make (debug)",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "make",
        },
    ],
    "version": "2.0.0"
}